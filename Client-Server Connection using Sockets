package lab10;

import java.io.*;
import java.net.*;

public class Client {
    public static void main(String[] args) {
        try {
            // Step 1 & 2: Connect to server socket
            Socket socket = new Socket("localhost", 5000);
            System.out.println("Connected to server successfully!");

            // Step 3: Exchange messages
            BufferedReader input = new BufferedReader(new InputStreamReader(System.in));
            PrintWriter out = new PrintWriter(socket.getOutputStream(), true);
            BufferedReader in = new BufferedReader(new InputStreamReader(socket.getInputStream()));

            System.out.print("Enter message to send to server: ");
            String message = input.readLine();
            out.println(message);

            // Step 4: Display data received
            String response = in.readLine();
            System.out.println("Server reply: " + response);

            // Step 5: Close connections
            in.close();
            out.close();
            socket.close();
            System.out.println("Client closed connection.");
        } 
        catch (IOException e) {
            System.out.println("Connection refused or error occurred: " + e.getMessage());
        }
    }
}

package lab10;

import java.io.*;
import java.net.*;

public class Server {
    public static void main(String[] args) {
        try {
            // Step 1: Create a ServerSocket on a specific port
            ServerSocket serverSocket = new ServerSocket(5000);
            System.out.println("Server started. Waiting for client connection...");

            // Step 2: Accept connection from client
            Socket socket = serverSocket.accept();
            System.out.println("Client connected successfully!");

            // Step 3: Exchange messages
            BufferedReader in = new BufferedReader(new InputStreamReader(socket.getInputStream()));
            PrintWriter out = new PrintWriter(socket.getOutputStream(), true);

            String message = in.readLine();
            System.out.println("Received from client: " + message);

            // Step 4: Display and send reply
            out.println("Hello Client, message received: " + message);

            // Step 5: Close connections
            in.close();
            out.close();
            socket.close();
            serverSocket.close();
            System.out.println("Server closed connection.");
        } 
        catch (IOException e) {
            System.out.println("Connection refused or error occurred: " + e.getMessage());
        }
    }
}



